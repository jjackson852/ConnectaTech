<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/provider_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/table_text_selector"
        android:layout_below="@id/provider_profile_image"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:id="@+id/edit_photo_btn"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/provider_profile_image"
        android:layout_toEndOf="@+id/provider_profile_image" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Photo"
        android:id="@+id/select_image_button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/edit_photo_btn"
        android:layout_toEndOf="@+id/edit_photo_btn" />
    <!--<Button-->
        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Edit Rating"-->
        <!--android:id="@+id/edit_rating_btn"-->
        <!--android:layout_below="@+id/image"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:numStars="5"
        android:stepSize="0.50"
        android:rating="2.0"
        android:layout_below="@+id/edit_photo_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtRatingValueAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toRightOf="@+id/ratingBar"/>

    <!--<Button-->
        <!--android:id="@+id/btnSubmit"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Submit Rating"-->
        <!--android:layout_below="@+id/edit_rating_btn"/>-->

    <TextView
        android:id="@+id/txtRatingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/ratingBar"/>

    <TextView
        android:id="@+id/totalRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/ratingBar"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRatingValue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="About Me"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtRatingValue"/>

    <!--AutoCompleteTextView-->
        <!--style="@style/ParseLoginUI.EditText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/provider_info_text"-->
        <!--android:completionThreshold="1"-->
        <!--android:imeOptions="actionNext"-->
        <!--android:inputType="textMultiLine"-->
        <!--android:layout_below="@+id/textView2"/>-->
    <!--Button-->
        <!--android:id="@+id/b_submit_provider_info"-->
        <!--style="@style/ShadowText"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:background="@drawable/button_background_states"-->
        <!--android:gravity="center"-->
        <!--android:padding="10dp"-->
        <!--android:text="Update Your Profile"-->
        <!--android:layout_below="@+id/provider_info_text"/>-->

    <Button
        android:id="@+id/edit_profile_button"
        style="@style/ShadowText"
        android:background="@drawable/button_background_states"
        android:gravity="center"
        android:padding="10dp"
        android:text="Edit Your Profile"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/select_image_button"
        android:layout_alignEnd="@+id/select_image_button" />

</RelativeLayout>
